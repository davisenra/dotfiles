{
  "ui_font_size": 14,
  "ui_font_family": "Adwaita Sans",
  "ui_font_weight": null,
  "project_panel": {
    "auto_fold_dirs": false,
    "dock": "left",
    "default_width": 380
  },
  "buffer_font_size": 13,
  "buffer_line_height": { "custom": 1.3 }, // standard is 1.3
  "buffer_font_family": "JetBrains Mono NL",
  "git": {
    "git_gutter": null,
    "gutter_debounce": null,
    "inline_blame": {
      "show_commit_summary": true,
      "min_column": 0
    },
    "hunk_style": null
  },
  "status_bar": {
    "cursor_position_button": false,
    "active_language_button": false
  },
  "debugger": {
    "button": false
  },
  "notification_panel": {
    "button": false
  },
  "collaboration_panel": {
    "button": false
  },
  "scrollbar": {
    "show": "auto",
    "axes": {
      "horizontal": false
    }
  },
  "theme": "One Light",
  "languages": {
    "TypeScript": {
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      },
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    },
    "JavaScript": {
      "formatter": "language_server",
      "format_on_save": "on",
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    },
    "Lua": {
      "formatter": null,
      "format_on_save": "off",
      "ensure_final_newline_on_save": false,
      "remove_trailing_whitespace_on_save": false
    },
    "Proto": {
      "formatter": null,
      "format_on_save": "off",
      "ensure_final_newline_on_save": false,
      "remove_trailing_whitespace_on_save": false
    },
    "YAML": {
      "formatter": null,
      "format_on_save": "off",
      "ensure_final_newline_on_save": false,
      "remove_trailing_whitespace_on_save": false
    },
    "PHP": {
      "language_servers": ["phpactor", "intelephense"],
      "formatter": null,
      "format_on_save": "off"
    }
  },
  "experimental.theme_overrides": {
    "syntax": {
      "string": {
        // "color": "#ffd866"
      }
    }
  },
  "disable_ai": true
}
